{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules", "**/__MOCKS__/**/*", "**/__TEST__/**/*", "**/*.spec.ts"
  ]
}
