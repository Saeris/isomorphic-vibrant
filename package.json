{
  "name": "@saeris/isomorphic-vibrant",
  "version": "0.1.0",
  "author": "Drake Costa <drake@saeris.io> (https://github.com/Saeris/)",
  "license": "MIT",
  "description": "A library for extracting prominent colors from an image anywhere you can run JavaScript!",
  "keywords": [
    "isomorphic",
    "color detection"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/saeris/isomorphic-vibrant.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "src/index.js",
  "scripts": {
    "build": "pika build",
    "build:docs": "fiddly",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ./src/**/*.{js,ts}",
    "test": "yarn lint && yarn typecheck && jest -c ./jest.config.js",
    "test:watch": "jest -c ./jest.config.js --watch",
    "test:coverage": "jest -c ./jest.config.js && codecov",
    "precommit": "lint-staged",
    "release": "pika publish",
    "version": "npm run build"
  },
  "dependencies": {
    "@silvia-odwyer/photon-node": "^0.2.0",
    "cross-fetch": "^3.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-types": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.10.1",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^26.3.0",
    "codecov": "^3.7.2",
    "core-js": "^3.6.5",
    "eslint": "^7.8.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "fiddly": "^0.9.1",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "prettier": "^2.0.5",
    "typescript": "^4.0.2"
  },
  "np": {
		"branch": "main"
	},
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "__TEST__/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-types"
      ]
    ]
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  }
}
